@model IEnumerable<OsAccountingApp1.Models.group>

@{
    ViewBag.Title = "Классы ОС";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.classname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.classname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.id_class }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.id_class }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id_class })
        </td>
    </tr>
}

</table>
